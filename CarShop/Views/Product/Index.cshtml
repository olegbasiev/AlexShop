@using AlexShopDb.Models
@model Product

 @{
    ViewData["Title"] = $"{Model.Name}";
}

<h1>@Model.Name</h1>

<div>
    <img src="@Model.ImagePath" alt="Image of @Model.Name" />
</div>



<p><strong>Цена:</strong> @Model.Price.ToString("C")</p>

<p><strong>Описание:</strong> @Model.Description</p>

<a href="/home/index" class="btn btn-primary">Назад</a>

 @* <a class="btn btn dark" href="/home/index" role="button"> Продолжить покупки</a>  *@

